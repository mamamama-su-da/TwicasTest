extends layout
block head-js
  script.
    userId = "#{userId}";
block hip-js
  script(type='text/javascript',src='/javascripts/video.js')
block content
  - var width = 854, height = 480;
  h1 Video
  video#video(width=width,height=height,src='/hls/' + userId + '/metastream.m3u8/?video=1',autoplay)
  div
    button#capture-button キャプチャする
    button#auto-capture-button 自動でキャプチャする
    button#stop-auto-button 止まれ
    button#tanaka-on 田中フラグオン
    button#tanaka-off 田中フラグオフ
  div#capture
  div(style='display:none;')
    canvas#tmp-canvas(width=width,height=height)
